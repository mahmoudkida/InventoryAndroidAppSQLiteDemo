<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SuppliersListFragment">
    <!-- TODO: Update blank fragment layout -->
    <ListView android:id="@+id/suppliersList"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </ListView>
    <LinearLayout
        android:id="@+id/emptyView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|center_vertical" android:orientation="vertical">
        <android.support.v7.widget.AppCompatImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            tools:ignore="VectorDrawableCompat"
            ads:srcCompat="@drawable/ic_delivery_truck" />
        <TextView
            android:text="No Supplier Added Yet!"
            android:textSize="22sp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Please click on the add button below to start adding new suppliers!"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addSupplier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@drawable/ic_add_black_24dp"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"/>
</FrameLayout>